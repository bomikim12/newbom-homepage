---
/**
 * Track Record 섹션 (실적)
 * @TASK P2-S1-T6
 * @SPEC docs/planning/06-screens.md#1.7-실적-섹션
 *
 * 기능:
 * - 섹션 헤더: "믿을 수 있는 실적"
 * - 사례 카드 2개
 * - 통계 하이라이트
 */

const cases = [
  {
    icon: 'corporate_fare',
    category: '대기업',
    title: '국내 대기업 식품회사',
    description: 'EU 라면 8종 라벨링 및 원재료 허가 완료',
    year: '2024',
    tags: ['EU', '라벨링', '원재료 검토'],
  },
  {
    icon: 'store',
    category: '중소기업',
    title: '중소 식품 수출기업',
    description: '미국 FDA 소스·시즈닝 인증 진행 중',
    year: '2025',
    tags: ['FDA', '시설등록', '라벨링'],
  },
];

const stats = [
  { value: '11년', label: '관세사 실무 경력', icon: 'workspace_premium' },
  { value: '30일', label: '평균 처리 기간', icon: 'schedule' },
  { value: '93%', label: '비용 절감률', icon: 'trending_down' },
];
---

<section id="track-record" class="py-20 md:py-24 bg-white">
  <div class="max-w-7xl mx-auto px-6">
    <!-- Section Header -->
    <div class="text-center mb-16 md:mb-20">
      <h2 class="text-sm font-bold text-deep-blue uppercase tracking-widest mb-3">
        Track Record
      </h2>
      <h3 class="text-3xl md:text-4xl font-bold text-navy">
        믿을 수 있는 실적
      </h3>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-3 gap-4 md:gap-8 mb-16 md:mb-20">
      {stats.map((stat) => (
        <div class="text-center p-4 md:p-6 rounded-2xl bg-slate-50">
          <div class="w-10 h-10 md:w-12 md:h-12 mx-auto bg-white rounded-xl flex items-center justify-center text-deep-blue mb-3 md:mb-4 shadow-sm">
            <span class="material-symbols-outlined text-xl md:text-2xl">{stat.icon}</span>
          </div>
          <div class="text-2xl md:text-3xl lg:text-4xl font-extrabold text-navy">
            {stat.value}
          </div>
          <div class="text-xs md:text-sm text-slate-500 mt-1">
            {stat.label}
          </div>
        </div>
      ))}
    </div>

    <!-- Cases -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8">
      {cases.map((caseItem) => (
        <div class="bg-slate-50 p-6 md:p-8 rounded-2xl border border-slate-100 hover:shadow-lg transition-shadow">
          <div class="flex items-start gap-4 md:gap-6">
            <!-- Icon -->
            <div class="w-12 h-12 md:w-14 md:h-14 bg-white rounded-2xl flex items-center justify-center text-deep-blue shadow-sm flex-shrink-0">
              <span class="material-symbols-outlined text-2xl md:text-3xl">{caseItem.icon}</span>
            </div>

            <!-- Content -->
            <div class="flex-1">
              <div class="flex items-center gap-2 mb-2">
                <span class="text-xs font-bold text-deep-blue uppercase tracking-wider">
                  {caseItem.category}
                </span>
                <span class="text-xs text-slate-400">·</span>
                <span class="text-xs text-slate-400">{caseItem.year}</span>
              </div>

              <h4 class="text-lg md:text-xl font-bold text-navy mb-2">
                {caseItem.title}
              </h4>

              <p class="text-sm text-slate-600 mb-4">
                {caseItem.description}
              </p>

              <!-- Tags -->
              <div class="flex flex-wrap gap-2">
                {caseItem.tags.map((tag) => (
                  <span class="text-xs font-medium text-slate-500 bg-white px-2.5 py-1 rounded-full">
                    {tag}
                  </span>
                ))}
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Trust Badge -->
    <div class="mt-12 md:mt-16 text-center">
      <div class="inline-flex items-center gap-3 px-6 py-3 bg-blue-50 rounded-full">
        <span class="material-symbols-outlined text-blue-600">verified_user</span>
        <span class="text-sm font-medium text-slate-700">
          전문가배상책임보험 가입 · 법적 효력 보장
        </span>
      </div>
    </div>
  </div>
</section>
