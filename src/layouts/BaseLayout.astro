---
// @TASK P0-T0.2 - Base Layout with Design System
// @SPEC docs/planning/05-design-system.md

interface Props {
  title?: string;
  description?: string;
}

const {
  title = '새봄컨설팅 | AI 자동화로 빠르고 정확한 FDA 인증',
  description = 'AI 자동화 + 전문 관세사 검토로 FDA 인증을 빠르고 정확하게. 기존 대비 93% 비용 절감.',
} = Astro.props;

import '../styles/global.css';
---

<!doctype html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />

    <!-- Pretendard 폰트 -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/gh/orioncactus/pretendard@v1.3.9/dist/web/static/pretendard.css"
    />

    <!-- Material Symbols Outlined 아이콘 -->
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap"
    />

    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
